@{
    ViewData["Title"] = "Punti Decurtati per Trasgressore";
}

<div class="container">
    <h1 class="text-center">Punti Decurtati per Trasgressore</h1>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID Anagrafica</th>
                    <th>Totale Punti Decurtati</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IDAnagrafica</td>
                        <td>@item.TotalePunti</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
