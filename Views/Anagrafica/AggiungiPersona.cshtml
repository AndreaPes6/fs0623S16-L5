@{
    ViewData["Title"] = "Aggiungi Persona";
}

<div class="container">
    <h1 class="text-center">Aggiungi Persona</h1>
    <form asp-controller="Anagrafica" asp-action="AggiungiPersona" method="post">
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome:</label>
            <input type="text" id="Nome" name="Nome" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="Cognome" class="form-label">Cognome:</label>
            <input type="text" id="Cognome" name="Cognome" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="Indirizzo" class="form-label">Indirizzo:</label>
            <input type="text" id="Indirizzo" name="Indirizzo" class="form-control">
        </div>

        <div class="mb-3">
            <label for="città" class="form-label">Città:</label>
            <input type="text" id="città" name="città" class="form-control">
        </div>

        <div class="mb-3">
            <label for="Cap" class="form-label">CAP:</label>
            <input type="text" id="Cap" name="Cap" class="form-control">
        </div>

        <div class="mb-3">
            <label for="CodFisc" class="form-label">Codice Fiscale:</label>
            <input type="text" id="CodFisc" name="CodFisc" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Aggiungi</button>
    </form>
</div>
